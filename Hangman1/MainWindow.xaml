<Window x:Class="Hangman1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Définit 3 lignes dans la grille principale -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Zone titre - Ligne 0 -->
        <Grid x:Name="Grd_Title" Grid.Row="0" Background="LightSlateGray">
            <Label Content="Hangman" FontSize="30" FontFamily="Algerian" Background="LightSlateGray" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>

        <!-- Zone jeux - Ligne 1 -->
        <Grid x:Name="Grd_game" Grid.Row="1">
            <Grid.Resources>
                <!-- Style Boutons lettres -->
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="3.5"/>
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="5"
                                        Padding="1"
                                        SnapsToDevicePixels="True">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#888888" BlurRadius="10" ShadowDepth="4" Opacity="0.4"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Gray"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="Gray"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Zone Image -->
            <Grid x:Name="Grd_image" Grid.Column="0" Background="LightSlateGray" />

            <!-- Zone Keypad -->
            <Grid x:Name="Grd_Keypad" Background="LightSlateGray" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Boutons lettres -->
                <Button Grid.Row="0" Grid.Column="0" Content="A" Click="BTN_Letter_Click"/>
                <Button Grid.Row="0" Grid.Column="1" Content="B" Click="BTN_Letter_Click"/>
                <Button Grid.Row="0" Grid.Column="2" Content="C" Click="BTN_Letter_Click"/>
                <Button Grid.Row="0" Grid.Column="3" Content="D" Click="BTN_Letter_Click"/>

                <Button Grid.Row="1" Grid.Column="0" Content="E" Click="BTN_Letter_Click"/>
                <Button Grid.Row="1" Grid.Column="1" Content="F" Click="BTN_Letter_Click"/>
                <Button Grid.Row="1" Grid.Column="2" Content="G" Click="BTN_Letter_Click"/>
                <Button Grid.Row="1" Grid.Column="3" Content="H" Click="BTN_Letter_Click"/>

                <Button Grid.Row="2" Grid.Column="0" Content="I" Click="BTN_Letter_Click"/>
                <Button Grid.Row="2" Grid.Column="1" Content="J" Click="BTN_Letter_Click"/>
                <Button Grid.Row="2" Grid.Column="2" Content="K" Click="BTN_Letter_Click"/>
                <Button Grid.Row="2" Grid.Column="3" Content="L" Click="BTN_Letter_Click"/>

                <Button Grid.Row="3" Grid.Column="0" Content="M" Click="BTN_Letter_Click"/>
                <Button Grid.Row="3" Grid.Column="1" Content="N" Click="BTN_Letter_Click"/>
                <Button Grid.Row="3" Grid.Column="2" Content="O" Click="BTN_Letter_Click"/>
                <Button Grid.Row="3" Grid.Column="3" Content="P" Click="BTN_Letter_Click"/>

                <Button Grid.Row="4" Grid.Column="0" Content="Q" Click="BTN_Letter_Click"/>
                <Button Grid.Row="4" Grid.Column="1" Content="R" Click="BTN_Letter_Click"/>
                <Button Grid.Row="4" Grid.Column="2" Content="S" Click="BTN_Letter_Click"/>
                <Button Grid.Row="4" Grid.Column="3" Content="T" Click="BTN_Letter_Click"/>

                <Button Grid.Row="5" Grid.Column="0" Content="U" Click="BTN_Letter_Click"/>
                <Button Grid.Row="5" Grid.Column="1" Content="V" Click="BTN_Letter_Click"/>
                <Button Grid.Row="5" Grid.Column="2" Content="W" Click="BTN_Letter_Click"/>
                <Button Grid.Row="5" Grid.Column="3" Content="X" Click="BTN_Letter_Click"/>

                <Button Grid.Row="6" Grid.Column="1" Content="Y" Click="BTN_Letter_Click"/>
                <Button Grid.Row="6" Grid.Column="2" Content="Z" Click="BTN_Letter_Click"/>
            </Grid>
        </Grid>

        <!-- Zone Display - Ligne 2 -->
        <Grid x:Name="Grd_Display" Grid.Row="2" Background="LightSlateGray"/>
        <Label Content="Hangman" FontSize="30" FontFamily="Algerian" Background="LightSlateGray" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <!-- Zone Footer (optionnel) -->

    </Grid>
</Window>
